# Telegram API Credentials (Required)
# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Bot Token (Required)
# Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Session String (Required)
# Generate this using a session string generator or pyrogram
SESSION_STRING=your_session_string_here

# Bot Owner (Optional but recommended)
# Your Telegram user ID - you can get this from @userinfobot
OWNER_ID=your_user_id_here

# Rate Limiting Settings (Optional)
RATE_LIMIT_SECONDS=3
ADMIN_RATE_LIMIT=1

# Message Limits (Optional)
MAX_MESSAGES=20

# File Size Limit in MB (Optional)
MAX_FILE_SIZE_MB=50

# Authorized Users (Optional)
# Comma-separated list of user IDs who get enhanced privileges
AUTHORIZED_USERS=123456789,987654321
